{
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",    
    "extends": "eslint-config-standard",
    "rules": {
      "space-before-function-paren": ["error", {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
      }],
      "semi": ["error", "always"],
      "no-extra-boolean-cast": 0
    }
  }
  